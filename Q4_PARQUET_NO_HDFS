from pyspark.sql import SparkSession

spark = SparkSession.builder \
    .appName("Query 4 - Parquet") \
    .master("local[*]") \
    .getOrCreate()
spark.sparkContext.setLogLevel("ERROR")

# Î¦ÏŒÏÏ„Ï‰ÏƒÎ· Parquet Î±ÏÏ‡ÎµÎ¯Î¿Ï…
df = spark.read.parquet("parquet_output/yellow_tripdata_2024")

# Î ÏÎ¿ÏƒÏ‰ÏÎ¹Î½ÏŒÏ‚ Ï€Î¯Î½Î±ÎºÎ±Ï‚
df.createOrReplaceTempView("trips")

# SQL Query
result = spark.sql("""
    SELECT payment_type, SUM(total_amount) AS total_charges
    FROM trips
    GROUP BY payment_type
    ORDER BY total_charges DESC
""")

print("ğŸ’³ Î£Ï…Î½Î¿Î»Î¹ÎºÎ® Ï‡ÏÎ­Ï‰ÏƒÎ· Î±Î½Î¬ Ï„ÏÏŒÏ€Î¿ Ï€Î»Î·ÏÏ‰Î¼Î®Ï‚ (Parquet):")
result.show()
