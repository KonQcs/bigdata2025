from pyspark.sql import SparkSession
from pyspark.sql.functions import avg

# Î”Î·Î¼Î¹Î¿Ï…ÏÎ³Î¯Î± SparkSession
spark = SparkSession.builder \
    .appName("Query 5 - Parquet") \
    .master("local[*]") \
    .getOrCreate()
spark.sparkContext.setLogLevel("ERROR")

# ğŸ”½ Î¦ÏŒÏÏ„Ï‰ÏƒÎ· Î±Ï€ÏŒ Parquet
df = spark.read.parquet("parquet_output/yellow_tripdata_2024")

# âœ… Î¥Ï€Î¿Î»Î¿Î³Î¹ÏƒÎ¼ÏŒÏ‚ Î¼Î­ÏƒÎ·Ï‚ Ï‡ÏÎ­Ï‰ÏƒÎ·Ï‚ Î±Î½Î¬ Î±ÏÎ¹Î¸Î¼ÏŒ ÎµÏ€Î¹Î²Î±Ï„ÏÎ½
result = df.groupBy("passenger_count") \
    .agg(avg("total_amount").alias("avg_total_amount")) \
    .orderBy("passenger_count")

# Î•Î¼Ï†Î¬Î½Î¹ÏƒÎ· Î±Ï€Î¿Ï„ÎµÎ»ÎµÏƒÎ¼Î¬Ï„Ï‰Î½
print("ğŸ“Š ÎœÎ­ÏƒÎ· Ï‡ÏÎ­Ï‰ÏƒÎ· Î±Î½Î¬ Î±ÏÎ¹Î¸Î¼ÏŒ ÎµÏ€Î¹Î²Î±Ï„ÏÎ½ (Parquet):")
result.show()
